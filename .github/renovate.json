{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":automergeDigest",
    "docker:enableMajor",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "adoptopenjdk"
      ],
      "versioning": "loose",
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+_\\d+-jre-hotspot$/"
    }
  ]
}